extends ../shared/template
block content
  h2 Treasure List
    .row
       .col-xs-12
         #map
      .row
        .col-xs-12
          table.table.table-striped.table-hover
            thead
              tr
                th Name
                th Location
                th Difficulty
                th Found?
            tbody
              each treasure in treasures
                tr(data-name=treasure.name, data-lat=treasure.lat, data-lng=treasure.lng)
                  td: a(href='/treasures/#{treasure._id}')= treasure.name
                  td= treasure.loc
                  td= treasure.difficulty
                  td= treasure.found

block scripts
  script(src='/js/user/treasuresIndex.js')
